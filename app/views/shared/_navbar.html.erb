<header class="header">
  <div class="header_body-row">
    <div class="header_brand">
      <a href="/" class="header_logo" >
        <h2 class="logo">Elles font la culture</h2>
      </a>
    </div>
    <div class="header_tools-links">
      <ul class="menu links-group mb0">
        <li>
          <%= link_to helps_path, class: "link-menu helps-link-menu #{params[:controller] == "helps" && params[:action] == "index" ? "helps-link-selected" : "" }" do  %>
            <span class="links-icones"><%= image_tag "emojis/argent-volant.png", class: "emojis-eflc-navbar" %> </span> Aides
          <% end %>
        </li>
        <li>
          <%= link_to conseils_path, class: "link-menu conseils-link-menu #{params[:controller] == "conseils_pratiques" && params[:action] == "index" ? "conseils-link-selected" : "" }" do  %>
            <span class="links-icones"> <%= image_tag "emojis/poignee-main.png", class: "emojis-eflc-navbar" %> </span> Conseils et témoignages
          <% end %>
        </li>
      </ul>
    </div>
    <a class="link-menu manifeste-link-menu" href="/a_propos">À propos</a>
  </div>
</header>

<header class="header-mobile">
  <a href="/" class="logo-mobile"><%= image_tag "logo.png"%></a>
  <input class="menu-btn" type="checkbox" id="menu-btn" />
  <label class="menu-icon" for="menu-btn"><span class="menu-span">MENU</span> <span class="navicon"></span></label>
  <ul class="menu">
    <a href="/helps"><li><%= image_tag "emojis/argent-volant.png", class: "emojis-eflc" %> Aides</li></a>
    <a href="/conseils"><li><%= image_tag "emojis/poignee-main.png", class: "emojis-eflc" %> Conseils et témoignages</li></a>
    <a href="/a_propos"><li>À propos</li></a>
  </ul>
</header>

