<!-- MODAL NEWSLETTER -->
<div id="modal-newsletter" class="modal">
  <div class="modal-inner">
    <a class="js-close-modal">
      <p>Fermer</p>
      <p class="cross">&times;</p>
    </a>
    <div class="modal-content">
      <p class="subtitle">💌 S'abonner à l'infolettre</p>
      <p class="paragraphe">Avec maximum un message par mois, nous vous informerons des nouveaux services proposés par le site, ou des appels à contributions pour nourrir cet outil ! Merci pour votre intérêt.</p>
      <% if alert %>
        <p style="font-weight: 900;"><%= alert %></p>
      <% end %>
      <%= simple_form_for [@contact], url: contacts_path, method: :post, class: "newsletter-form" do |f| %>
        <%= f.input :contact_email,
                        label: "Email (obligatoire)",
                        placeholder: "Email",
                        required: true %>
        <%= f.input :contact_type,
                        input_html: { value: 'newsletter' },
                        as: :hidden %>
        <div class="btn-div">
          <%= f.button :submit, "S'abonner" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- MODAL CONTACT -->
<div id="modal-contact" class="modal">
  <div class="modal-inner">
    <a class="js-close-modal">
      <p>Fermer</p>
      <p class="cross">&times;</p>
    </a>
    <div class="modal-content">
      <p class="subtitle">✏️ Nous écrire</p>
      <% if notice %>
        <p style="font-weight: 900;"><%= notice %></p>
      <% end %>
      <%= simple_form_for [@contact], url: contacts_path, method: :post do |f| %>
        <%= f.input :contact_type,
                      as: :select,
                      label: "Pourquoi ?",
                      placeholder: "Choisissez votre type de contact",
                      collection: ['Une idée ? Une question ?', 'Devenir Beta Testeuse'],
                      include_hidden: false,
                      required: true %>
        <%= f.input :contact_email,
                      label: "Email (obligatoire)",
                      placeholder: "Email",
                      required: true %>
        <%= f.input :message,
                      placeholder: "Votre message",
                      as: :text,
                      required: true %>
        <div class="btn-div">
          <%= f.button :submit, "Envoyer" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
