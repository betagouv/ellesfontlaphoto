<% @conseils.each do |conseil| %>
  <% if conseil.class == ConseilsArticle %>
    <div class="card-index-conseils-articles">
      <%= link_to conseils_article_path(conseil) do %>
        <div class="flottante-div">
          <div class="flottante">
            <% conseil.category_list.each do |category| %>
              <% if category == "Administratif" %>
                📕
              <% end %>
              <% if category == "Financier" %>
                🤑
              <% end %>
              <% if category == "Technique" %>
                🛠
              <% end %>
              <% if category == "Parcours" %>
                ✨️
              <% end %>
            <% end %>
          </div>
        </div>
        <p class="main-bold-paragraphe mb30"><%= conseil.title %></p>
        <p class="paragraphe mb0"><span class="paragraphe-bold">⏰ Lecture:</span> <%= conseil.lecture_time %> minutes</p>
        <% if conseil.objectif.present? %>
          <p class="paragraphe mb0"><span class="paragraphe-bold">👉 Objectif:</span> <%= conseil.objectif %></p>
        <% end %>
        <p class="arrow text-align-right"><%= image_tag "arrow-rouille.svg" %></p>
      <% end %>
    </div>
  <% elsif conseil.class == ConseilsVideo %>
    <div class="card-index-conseils-videos">
      <%= link_to conseils_video_path(conseil) do %>
        <div>
          <%= image_tag "https://images.pexels.com/photos/1264210/pexels-photo-1264210.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260" %>
        </div>
        <div class="flottante-div">
          <div class="flottante">
            <% conseil.category_list.each do |category| %>
              <% if category == "Administratif" %>
                📕
              <% end %>
              <% if category == "Financier" %>
                🤑
              <% end %>
              <% if category == "Technique" %>
                🛠
              <% end %>
              <% if category == "Parcours" %>
                ✨️
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="flottante-play">
          <%= image_tag "play.svg" %>
        </div>
        <div class="cards-videos-info">
          <p class="cards-tags mb0">
            <%= conseil.tags.join(",") %>
          </p>
          <p class="main-bold-paragraphe mb30"><%= conseil.title %> | <span class="paragraphe"><%= conseil.protagoniste %></span></p>
          <p class="paragraphe mb0"><span class="paragraphe-bold">⏰ Lecture:</span> <%= conseil.lecture_time %> minutes</p>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>
