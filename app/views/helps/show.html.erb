<div class=div-banner>
  <div class="banner-show">
    <div class="help-title">
      <div class="flex-div-left">
        <a class="mr20" href="/helps"> <%= image_tag "return-arrow.svg" %></a>
        <% @help.type_list.each do |type| %>
          <% if type == "Matériel" %>
            <a href="/helps?residence=&type=Matériel"><p class="help-type"> 💸 <%= Help::HELP_TYPE[type.to_sym] %></p></a>
          <% end %>
          <% if type == "Production" %>
            <a href="/helps?residence=&type=Production"><p class="help-type"> 💸 <%= Help::HELP_TYPE[type.to_sym] %></p></a>
          <% end %>
          <% if type == "Aide Sociale" %>
            <a href="/helps?residence=&type=Aide+Sociale"><p class="help-type"> 💸 <%= Help::HELP_TYPE[type.to_sym] %></p></a>
          <% end %>
          <% if type == "Diffusion" %>
            <a href="/helps?residence=&type=Diffusion"><p class="help-type"> 💸 <%= Help::HELP_TYPE[type.to_sym] %></p></a>
          <% end %>
          <% if type == "Résidence" %>
            <a href="/helps?residence=&type=Résidence"><p class="help-type"> 💸 🏠 résidence</p></a>
          <% end %>
        <% end %>
      </div>
      <h2><%= @help.title %></h2>
      <p class="paragraphe"><%= @help.description %></p>
    </div>
    <div class="help-description">
      <p class="paragraphe paragraphe-bold">💰 Gains:</p>
      <p class="paragraphe"><%= @help.help_amount %></p>
      <% if @help.residence_time.present? %>
        <p class="paragraphe">hébergement pour <%= @help.residence_time %></p>
      <% end %>
      <hr class="hl">
      <p class="paragraphe paragraphe-bold">📅 Dates de candidature:</p>
      <% if @help.start_date.present? %>
        <p class="paragraphe">Début: <%= I18n.l @help.start_date, format: :long %> / Fin: <%= I18n.l @help.end_date, format: :long %></p>
      <% end %>
      <% if @help.regularity.present? %>
        <p class="paragraphe"><%= @help.regularity %></p>
      <% end %>
      <hr class="hl">
      <p class="paragraphe paragraphe-bold">Conditions pincipales:</p>
      <p class="paragraphe">📍Résidence: <%= @help.residence_condition %></p>
      <p class="paragraphe"><%= @help.general_condition %></p>
    </div>
  </div>
</div>

<div class="arrondis">
</div>

<div class="help-content">
  <div class="div-btn">
    <% if @help.candidate_url.present? %>
      <% if @help_status == "open" %>
        <a class="btn-candidate" href="<%= @help.candidate_url %>" target=”_blank” onclick="_paq.push(['trackEvent', 'Candidatez', 'Candidat Click Lien', 'Nouveau Candidatez']);">🚀 Candidatez</a>
      <% elsif @help_status == "close" %>
        <a class="btn-not-available"> 🚀 Candidatez </a>
        <p class="paragraphe-bold">Actuellement fermée, revenez en <%= I18n.l @help.start_date, format: "%B" %></p>
      <% end %>
    <% end %>
  </div>
  <hr class="bhl">
  <div class="block-fiche-aide">
    <p class="subtitle">Sélection des lauréates et lauréats</p>
    <p class="paragraphe"><%= @help.selection %></p>
    <% if @help.example_enrollment_url.present? %>
      <p class="paragraphe-bold mb0">Exemple de dossiers lauréats</p>
      <a class="link-blue" target=”_blank” href="<%= @help.example_enrollment_url %>"> <%= image_tag "arrow-darkblue.svg" %> C'est ici</a>
      <p class="paragraphe-bold mb0" style="margin-top:30px;" >Composition de la commission</p>
    <% else %>
      <p class="paragraphe-bold mb0">Composition de la commission</p>
    <% end %>
    <p class="paragraphe mb0"><%= @help.compo_commission %></p>
    <a class="link-blue" target=”_blank” href="<%= @help.url_commission %>"> <%= image_tag "arrow-darkblue.svg" %> Membres de la commission</a>
    <% if @help.old_laureat.present? %>
      <p class="paragraphe-bold mt30 mb0">Précédents lauréates & lauréats</p>
      <p class="paragraphe mb0"><%= @help.old_laureat %></p>
      <a class="link-blue" target=”_blank” href="<%= @help.old_laureat_url %>"> <%= image_tag "arrow-darkblue.svg" %> Voir les lauréats</a>
    <% end %>
  </div>
  <hr class="bhl">
  <div class="block-fiche-aide flex-div">
    <div>
      <p class="subtitle">Pièces à fournir</p>
      <p class="paragraphe-bold mb0">🗒 Pièces administratives</p>
      <%= @help.admin_attachment.html_safe %>
      <p class="paragraphe-bold mb0">🎨 Dossier artistique</p>
      <%= @help.artistic_attachment.html_safe %>
    </div>
    <div>
      <% if @help.other_attachment.present? %>
        <p class="paragraphe-bold mb0">📓 Pièces spécifiques</p>
        <%= @help.other_attachment.html_safe %>
      <% end %>
    </div>
  </div>
  <% if @help.parentality.present? || @help.accessibility.present? || @help.specific_condition.present? %>
    <hr class="bhl">
    <% if @help.specific_condition.present? %>
      <div class="block-fiche-aide">
        <p class="paragraphe-bold mb0">Conditions spécifiques</p>
        <p class="paragraphe"><%= @help.specific_condition %></p>
      </div>
    <% end %>
    <% if @help.parentality.present? || @help.accessibility.present? %>
      <div class="block-fiche-aide">
        <p class="paragraphe-bold mb0">Accueil</p>
        <ul>
          <% if @help.parentality.present? %>
            <li><p class="paragraphe mb0"><%= @help.parentality %></p></li>
          <% end %>
          <% if @help.accessibility.present? %>
            <li><p class="paragraphe"><%= @help.accessibility %></p></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <% end %>
  <hr class="bhl">
  <div class="block-fiche-aide">
    <p class="subtitle">Contact</p>
    <p class="paragraphe-bold mb0">Aide donnée par <%= @help.institution_name %> <a class="link-blue" target=”_blank” href="<%= @help.url_commission %>"> <%= image_tag "arrow-darkblue.svg" %> Site de l'intitution</a></p>
    <p class="paragraphe">N'hésitez pas à envoyer un e-mail pour présicer votre candidature: </p>
    <% if @help.contact_institution.present? %>
      <p class="paragraphe mb0"><%= @help.contact_institution.html_safe %></p>
    <% end %>
    <% if @help.contact_intitution_email.present? %>
      <p class="paragraphe mb0">
      <ul>
        <% @help.contact_intitution_email.each do |email| %>
          <li><%= mail_to email, email, class: "link-blue" %></li>
        <% end %>
      </ul>
      </p>
    <% end %>
    <% if @help.contact_intitution_partenaire.present? %>
      <p class="paragraphe mb0">Partenaire participant à la sélection :
      <ul>
        <% @help.contact_intitution_partenaire.each do |email| %>
          <li><p class="paragraphe mb0"> <%= mail_to email, email, class: "link-blue" %></p></li>
        <% end %>
      </ul>
      </p>
    <% end %>
    <% if @help.faq_url.present? %>
      <a class="btn-faq" target=”_blank” href="<%= @help.faq_url %>">Foire aux questions / FAQ</a>
    <% end %>
  </div>
  <hr class="bhl">
  <p class="link-blue" style="text-align:center">N'hésitez pas à déposer votre dossier avant la date limite afin d'obtenir un retour s'il présente une erreur.</p>
</div>
