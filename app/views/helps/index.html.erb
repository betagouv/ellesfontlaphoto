<div class="search-div-type">
  <p class="text-search">je veux</p>
  <div class="dropdown">
    <% if @selected_type.present? %>
      <div id="select-search-type"><%= @selected_type %><%= image_tag "arrow-search.svg", width: "25px" %></div>
    <% else %>
      <div id="select-search-type"><span id="text-to-change-type"><%= Help::HELP_TYPE.values.sample %></span><%= image_tag "arrow-search.svg", width: "25px" %></div>
    <% end %>
    <div id="dropdown-elements-type">
      <% Help::HELP_TYPE.values.each do |type| %>
        <div class="dropdown-content-type"><%= type %></div>
      <% end %>
    </div>
  </div>
</div>
<div class="search-div-residence">
  <p class="text-search">je réside en</p>
  <div class="dropdown">
    <% if @selected.present? %>
      <div id="select-search-residence"><%= @selected %><%= image_tag "arrow-search.svg", width: "25px" %></div>
    <% else %>
      <div id="select-search-residence"><span id="text-to-change-residence"><%= Help::HELP_RESIDENCE.sample %></span><%= image_tag "arrow-search.svg", width: "25px" %></div>
    <% end %>
    <div id="dropdown-elements-residence">
      <% Help::HELP_RESIDENCE.each do |residence| %>
        <div class="dropdown-content-residence"><%= residence %></div>
      <% end %>
    </div>
  </div>
</div>
<div class="button-search">
  🎯 Filtrer les aides
</div>
<%= form_tag helps_path, method: :get, id: "search-form" do %>
  <% if @selected.present? %>
    <%= text_field_tag :query_residence, params[:query_residence], value: @selected %>
  <% else %>
    <%= text_field_tag :query_residence, params[:query_residence] %>
  <% end %>
  <% if @selected_type.present? %>
    <%= text_field_tag :query_type, params[:query_residence], value: @selected_type %>
  <% else %>
    <%= text_field_tag :query_type, params[:query_residence] %>
  <% end %>
  <%= submit_tag "Search" %>
<% end %>
<div class="main-index">
  <div class="index-direction">
    <% if @selected.present? %>
      <p class="main-bold-paragraphe text-align-left"><%= @helps.count %> aides correspondent à vos critères 🎊</p>
      <p class="link-blue"><a href="/helps"> <- Toutes les aides </a></p>
    <% else %>
      <p class="main-bold-paragraphe text-align-left"><%= @helps.count %> aides recensées</p>
      <p class="paragraphe">Nous ajoutons régulièrement des aides. Dernière mise à jour le 26/09/2021</p>
    <% end %>
  </div>
  <div class="cards">
    <% @helps.each do |help| %>
      <div class="card-index">
        <%= link_to help_path(help) do %>
        <% if Help::HELP_TYPE[help.help_type.to_sym] == "Achat de matériel" %>
          <div class="flottante">📸</div>
        <% elsif Help::HELP_TYPE[help.help_type.to_sym] == "Aide à la production" %>
          <div class="flottante">🛠</div>
        <% elsif Help::HELP_TYPE[help.help_type.to_sym] == "Aide sociale" %>
          <div class="flottante">🔮</div>
        <% elsif Help::HELP_TYPE[help.help_type.to_sym] == "Aide à la diffusion" %>
          <div class="flottante">📣</div>
        <% end %>
          <% if help.start_date < Date.today && Date.today < help.end_date %>
            <div class="flottante2">C'est maintenant !</div>
          <% elsif (help.start_date - Date.today).to_i < 90 %>
            <div class="flottante2">C'est bientôt !</div>
          <% end %>
          <p class="main-bold-paragraphe mb30"><%= help.title.to_sym %></p>
          <p class="paragraphe mb0"><span class="paragraphe-bold">💰 Gains:</span> <%= help.help_amount %></p>
          <p class="paragraphe mb0"><span class="paragraphe-bold">🗓 Dates de candidature:</span> <%= I18n.l help.start_date, format: :long %></p>
          <p class="paragraphe mb0"><span class="paragraphe-bold">📍 Conditions:</span> <%= help.residence_condition %></p>
          <p class="arrow text-align-right"><%= image_tag "arrow.svg" %></p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
