<div class="flip-card-front" data-action="click->flip-card#flip">
  <div class="card-organization-name" style="display: flex; align-items: center; justify-content:center;">
    <p class="paragraphe-bold">
    <span class="organization-name"><%= organization.name %><% unless organization.city.blank? %>,<% end %></span>
      <% unless organization.city.blank? %><span class="paragraphe"><%= organization.city %></span><% end %>
    </p>
  </div>
  <div id="flexible">
    <% if organization.expos_parity.to_i >= 50 %>
      <div class="c100 p<%= organization.expos_parity.to_i %> purple">
    <% else %>
      <div class="c100 p<%= organization.expos_parity.to_i %> orange">
    <% end %>
      <span><%= organization.expos_parity.to_i %>%</span>
      <div class="slice">
        <div class="bar"></div>
        <div class="fill"></div>
      </div>
    </div>
  </div>
  <div class="card-organization-numbers">
    <% if organization.nb_women_expos.blank? || organization.total_nb_expos.blank? %>
      <p><mark>femmes photographes <br> exposées : N/R</mark></p>
    <% else %>
      <p><mark class="<%= organization.expos_parity.to_i >= 50 ? "purple" : "orange" %>">femmes photographes <br> exposées : <%= organization.nb_women_expos %> / <%= organization.total_nb_expos %></mark></p>
    <% end %>
    <hr>
    <% if organization.nb_women_dir.blank? || organization.total_nb_dir.blank? %>
      <p class="paragraphe-grey">dirigeantes : N/R</p>
    <% else %>
      <p class="paragraphe-grey"><%= "dirigeante".pluralize(organization.total_nb_dir) %> : <%= organization.nb_women_dir %> / <%= organization.total_nb_dir %></p>
    <% end %>
  </div>
</div>
