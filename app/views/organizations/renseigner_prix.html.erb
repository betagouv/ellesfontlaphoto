<div class="ajout-organization-page" data-controller="price-validation">
  <%= link_to image_tag("arrow-carousel-chiffres-left.svg"), edit_organization_chiffres_organization_path(@organization, @organization.chiffres_organizations.order(:created_at).last), class: "edit-orga" %>
  <div class="ajout-organization-title">
    <p class="subtitle-spectral">Chiffrer l'égalité femmes-hommes, secteur de la photographie.<span class="subtitle-regular">Renseignez les chiffres de votre prix ! </span></p>
  </div>
  <div class="ajout-organization-form">
    <%= simple_form_for [@prix_organization], url: :create_prix, style: "width:100%;", data: {action: "submit->price-validation#submit", price_validation_target: "form"} do |f| %>
      <p class="main-paragraphe-medium mt40">C'est la dernière étape !</p>
      <%= f.input :titre, label: "Quel est le titre de votre prix ?" %>
      <%= f.simple_fields_for :chiffres_organizations do |p| %>
        <%= p.hidden_field :annee, value: @organization.chiffres_organizations.order(:created_at).last.annee %>
        <%= p.input :nb_total_candidats, label: "Combien de personnes ont candidaté à vos appels à candidatures ?", input_html: { min: '0' } %>
        <%= p.input :nb_femmes_candidates, label: "Parmi ces candidats, combien étaient des femmes ?", input_html: { min: '0' } %>
        <%= p.input :nb_total_laureates, label: "Combien de lauréat(e)s avez-vous récompensé ?", input_html: { min: '0' } %>
        <%= p.input :nb_femmes_laureates, label: "Parmi ces lauréat(e)s, combien étaient des femmes ?", input_html: { min: '0' } %>
        <%= p.input :nb_total_jurys, label: "Combien de personnes ont participé au jury de sélection des photographes ?", input_html: { min: '0' } %>
        <%= p.input :nb_femmes_jurys, label:"Parmi ces personnes, combien étaient des femmes ?", input_html: { min: '0' } %>
      <% end %>
      <div class="btn-submit">
        <%= f.submit "Soumettre", class: "btn btn-black", data: {price_validation_target: "button"} %>
      </div>
    <% end %>
  </div>
</div>
