<div class="flip-card-front" data-action="click->flip-card#flip">
  <div class="card-organization-name" style="display: flex; align-items: center; justify-content:center;">
    <p class="paragraphe-bold">
    <span class="organization-name"><%= organization.name %><% unless organization.city.blank? %>,<% end %></span>
      <% unless organization.city.blank? %><span class="paragraphe"><%= organization.city %></span><% end %>
    </p>
  </div>
  <div id="flexible">
    <% if organization.etudiants_parity.to_i >= 50 %>
      <div class="c100 p<%= organization.etudiants_parity.to_i %> purple">
    <% else %>
      <div class="c100 p<%= organization.etudiants_parity.to_i %> orange">
    <% end %>
      <span><%= organization.etudiants_parity.to_i %>%</span>
      <div class="slice">
        <div class="bar"></div>
        <div class="fill"></div>
      </div>
    </div>
  </div>
  <div class="card-organization-numbers">
    <% if organization.nb_femmes_etudiantes.blank? || organization.nb_total_etudiants.blank? %>
      <p><mark><br> étudiantes : N/R</mark></p>
    <% else %>
      <p><mark class="<%= organization.etudiants_parity.to_i >= 50 ? "purple" : "orange" %>"><br> étudiantes : <%= organization.nb_femmes_etudiantes %> / <%= organization.nb_total_etudiants %></mark></p>
    <% end %>
    <hr>
    <% if organization.nb_femmes_enseignantes.blank? || organization.nb_total_enseignants.blank? %>
      <p class="paragraphe-grey">étudiantes : N/R</p>
    <% else %>
      <p class="paragraphe-grey"><%= "enseignante".pluralize(organization.nb_total_enseignants) %> : <%= organization.nb_femmes_enseignantes %> / <%= organization.nb_total_enseignants %></p>
    <% end %>
  </div>
</div>
