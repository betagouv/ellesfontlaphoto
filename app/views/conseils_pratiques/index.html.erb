    <%= text_field_tag :category, params[:category], value: @selected %>
  <% else %>
    <%= text_field_tag :category, params[:category] %>
  <% end %>
  <% if @selected_tag.present? %>
    <%= text_field_tag "tags[]", params[:tags], value: [@selected_tag] %>
