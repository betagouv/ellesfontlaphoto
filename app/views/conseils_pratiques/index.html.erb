<div class="search-div-category">
  <p class="text-search">Conseils</p>
  <div class="dropdown">
    <% if @selected.present? %>
      <div id="select-search-category" class="choosen"><%= image_tag "emojis/#{ConseilsVideo::CONSEIL_CATEGORIES[@selected.to_sym][:image]}", class: "emojis-eflc-large" %> <%= ConseilsVideo::CONSEIL_CATEGORIES[@selected.to_sym][:text] %></div>
    <% else %>
      <% @sample = ConseilsVideo::CONSEIL_CATEGORIES.values.sample %>
      <div id="select-search-category"><span id="text-to-change-category"><%#= image_tag "emojis/#{@sample[:image]}", class: "emojis-eflc-large" %><%= @sample[:text] %></span><%= image_tag "arrow-search.svg", class: "arrow-search", width: "25px" %></div>
    <% end %>
    <div id="dropdown-elements-category">
      <% ConseilsVideo::CONSEIL_CATEGORIES.each do |category| %>
        <div class="dropdown-content-category" data-filtre="<%= category.first.to_s %>"><%= image_tag "emojis/#{category.second[:image]}", class: "emojis-eflc-medium" %> <%= category.second[:text] %></div>
      <% end %>
    </div>
  </div>
</div>
<div class="button-search">
  <%= image_tag "emojis/cible.png", class: "emojis-eflc-small" %> Lancer la recherche
</div>
<%= form_tag conseils_path, method: :get, id: "search-form" do %>
  <% if @selected.present? %>
    <%= text_field_tag :category_list, @selected %>
  <% else %>
    <%= text_field_tag :category_list %>
  <% end %>
  <div class="ici"></div>
  <% if @selected_tag.present? %>
    <%= text_field_tag :tag_list, @selected_tag %>
  <% else %>
    <%= text_field_tag :tag_list %>
  <% end %>
  <%= submit_tag "Search"%>
<% end %>
<div class="progress-container">
  <div class="progress"></div>
</div>
<div class="main-index">
  <div class="index-direction">
    <% if @selected.present? || @selected_tag.present? %>
      <div class="box-criteria box-criteria-top">
        <p class="main-bold-paragraphe text-align-left"><%= @conseils.count %> conseils et temoignages pour :</p>
        <% if @selected.present? %>
          <p class="button-criteria-selected" data-category="<%= @selected %>"><%= image_tag "emojis/#{ConseilsVideo::CONSEIL_CATEGORIES[@selected.to_sym][:image]}", class: "emojis-eflc-extra-small" %> <%= ConseilsVideo::CONSEIL_CATEGORIES[@selected.to_sym][:text] %> <%= image_tag "cross-criteria.svg" %></p>
        <% end %>
        <% if @selected_tag.present? %>
          <% ConseilsVideo::CONSEIL_TAGS.each do |tag| %>
            <% if @selected_tag.include?(tag) %>
              <p class="button-criteria-selected tags" data-tag="<%= tag %>"><%= tag %>  <%= image_tag "cross-criteria.svg" %></p>
            <% end %>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <p class="main-bold-paragraphe conseils-sum text-align-left"><%= @conseils.count %> conseils et temoignages</p>
    <% end %>
    <div class="box-criteria">
      <p class="main-bold-paragraphe text-align-left">Précisez votre recherche :</p>
      <% ConseilsVideo::CONSEIL_TAGS.each do |tag| %>
        <% if params[:tag_list].present? %>
          <% unless params[:tag_list].include?(tag) %>
            <p class="button-criteria tags" data-tag="<%= tag %>"><%= tag %></p>
          <% end %>
        <% else %>
          <p class="button-criteria tags" data-tag="<%= tag %>"><%= tag %></p>
        <% end %>
      <% end %>
    </div>
    <div class="contact-index-conseils-div">
      <div class="contact-index-conseils">
        <div class="img-div">
          <%= image_tag "illu-contact-index.png" %>
        </div>
        <p class="paragraphe-bold">Une idée, un besoin d’article ou de témoignage que vous souhaiteriez partager avec nous ?</p>
        <!-- <p class="button-contact-index"><%#= image_tag "emojis/stylo.png", class: "emojis-eflc-small" %> Nous écrire</p> -->
        <p class="js-modal button-contact-index" data-modal="modal-contact"><%= image_tag "emojis/stylo.png", class: "emojis-eflc-small" %> Nous écrire</p>
      </div>
      <p class="small-paragraphe">Nous ajoutons régulièrement des articles, dernière mise à jour le <%= @last_date_updated %></p>
    </div>
  </div>
  <div class="cards">
    <div class="index-direction-tablet-conseils">
      <% if @selected.present? || @selected_tag.present? %>
        <div class="box-criteria box-criteria-top">
          <p class="main-bold-paragraphe text-align-left"><%= @conseils.count %> conseils et temoignages pour :</p>
          <% if @selected.present? %>
            <p class="button-criteria-selected" data-category="<%= @selected %>"><%= image_tag "emojis/#{ConseilsVideo::CONSEIL_CATEGORIES[@selected.to_sym][:image]}", class: "emojis-eflc-extra-small" %><%= ConseilsVideo::CONSEIL_CATEGORIES[@selected.to_sym][:text] %> <%= image_tag "cross-criteria.svg" %></p>
          <% end %>
          <% if @selected_tag.present? %>
            <% ConseilsVideo::CONSEIL_TAGS.each do |tag| %>
              <% if @selected_tag.include?(tag) %>
                <p class="button-criteria-selected tags" data-tag="<%= tag %>"><%= tag %>  <%= image_tag "cross-criteria.svg" %></p>
              <% end %>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <p class="main-bold-paragraphe sum-conseils text-align-left"><%= @conseils.count %> conseils et témoignages</p>
      <% end %>
      <div class="box-criteria non-dropdown">
        <p class="main-bold-paragraphe text-align-left">Précisez votre recherche :</p>
        <% ConseilsVideo::CONSEIL_TAGS.each do |tag| %>
          <% if params[:tag_list].present? %>
            <% unless params[:tag_list].include?(tag) %>
              <p class="button-criteria tags" data-tag="<%= tag %>"><%= tag %></p>
            <% end %>
          <% else %>
            <p class="button-criteria tags" data-tag="<%= tag %>"><%= tag %></p>
          <% end %>
        <% end %>
      </div>
      <div class="box-criteria dropdown">
        <%= render "shared/dropdown_criteria_mobile" %>
      </div>
    </div>
    <%= render "shared/conseils_cards", conseils: @sorted_conseils %>
    <div class="contact-index-conseils-div-responsive">
      <div class="contact-index-conseils">
        <div class="img-div">
          <%= image_tag "illu-contact-index.png"%>
        </div>
        <p class="paragraphe-bold">Une idée, un besoin d’article ou de témoignage que vous souhaiteriez partager avec nous ?</p>
        <!-- <p class="button-contact-index"><%#= image_tag "emojis/stylo.png", class: "emojis-eflc-small" %> Nous écrire</p> -->
        <p class="js-modal button-contact-index" data-modal="modal-contact"><%= image_tag "emojis/stylo.png", class: "emojis-eflc-small" %> Nous écrire</p>
      </div>
      <p class="small-paragraphe">Nous ajoutons régulièrement des articles, dernière mise à jour le <%= @last_date_updated %></p>
    </div>
  </div>
</div>

<%= render "shared/modales_contact" %>
