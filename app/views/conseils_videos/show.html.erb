<div class=div-banner-conseils-video>
  <div class="flex-div-left">
    <a class="mr20" href="/conseils"> <%= image_tag "return-arrow.svg" %></a>
    <% @conseil_video.category.each do |category| %>
      <% if category == "Administratif" %>
        <a href="/conseils?category=Administratif&tags%5B%5D="><p class="conseil-tag"> 💸 <%= ConseilsVideo::CONSEIL_CATEGORIES[category.to_sym] %></p></a>
      <% end %>
      <% if category == "Financier" %>
        <a href="/conseils?category=Financier&tags%5B%5D="><p class="conseil-tag"> 💸 <%= ConseilsVideo::CONSEIL_CATEGORIES[category.to_sym] %></p></a>
      <% end %>
      <% if category == "Technique" %>
        <a href="/conseils?category=Technique&tags%5B%5D="><p class="conseil-tag"> 💸 <%= ConseilsVideo::CONSEIL_CATEGORIES[category.to_sym] %></p></a>
      <% end %>
      <% if category == "Matrimoine" %>
        <a href="/conseils?category=Matrimoine&tags%5B%5D="><p class="conseil-tag"> 💸 <%= ConseilsVideo::CONSEIL_CATEGORIES[category.to_sym] %></p></a>
      <% end %>
    <% end %>
    <% @conseil_video.tags.each do |tag| %>
      <% if tag == "Commencer mon activité" %>
        <a href="/conseils?category=&tags%5B%5D=Commencer+mon+activité&tags%5B%5D="><p class="conseil-tag"> 💸 Commencer mon activité</p></a>
      <% end %>
      <% if tag == "Me former" %>
        <a href="/conseils?category=&tags%5B%5D=Me+former&tags%5B%5D="><p class="conseil-tag"> 💸 Me former </p></a>
      <% end %>
      <% if tag == "Gérer ma carrière" %>
        <a href="/conseils?category=&tags%5B%5D=Gérer+ma+carrière&tags%5B%5D="><p class="conseil-tag"> 💸 Gérer ma carrière</p></a>
      <% end %>
      <% if tag == "Sensibiliser pour l'égalité" %>
        <a href="conseils?category=&tags%5B%5D=Sensibiliser+pour+l%27égalité&tags%5B%5D="><p class="conseil-tag"> 💸 Sensibiliser pour l'égalité</p></a>
      <% end %>
    <% end %>
  </div>
  <div class="banner-show">
    <div class="contact-title">
      <h2><%= @conseil_video.title %></h2>
      <p class="subtitle-conseils-video"><%= @conseil_video.subtitle %></p>
    </div>
    <div class="conseils-video-description">
      <p class="paragraphe"><span class="paragraphe-bold">⏰ Durée:</span><%= @conseil_video.lecture_time %> min</p>
      <p class="paragraphe"><span class="paragraphe-bold">👉 Objectifs:</span><%= @conseil_video.objectif %></p>
      <p class="paragraphe"><span class="paragraphe-bold">📼 Format vidéo:</span><%= @conseil_video.format %></p>
    </div>
  </div>
</div>
<div class="arrondis-conseils-videos">
</div>
