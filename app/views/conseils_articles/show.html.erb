<% content_for :meta_title, "#{@conseil_article.title} sur #{DEFAULT_META["meta_product_name"]}" %>
<% content_for :meta_description, @conseil_article.subtitle %>

<div class=div-banner-conseils-article>
  <div class="flex-div-left">
    <a class="mr20" href="/conseils"> <%= image_tag "return-arrow.svg" %></a>
    <% @conseil_article.category_list.each do |category| %>
      <% if category == "Administratif & Financier" %>
        <a href="/conseils?category_list=Administratif+%26+Financier&tag_list=">
      <% end %>
      <% if category == "Artistique & Technique" %>
        <a href="/conseils?category_list=Artistique+%26+Technique&tag_list=">
      <% end %>
      <% if category == "Egalite & inclusion" %>
        <a href="/conseils?category_list=Egalite+%26+inclusion&tag_list=">
      <% end %>
        <p class="conseil-tag"><%= image_tag "emojis/#{ConseilsArticle::CONSEIL_CATEGORIES[category.to_sym][:image]}", class: "emojis-eflc-extra-small" %> <%= ConseilsArticle::CONSEIL_CATEGORIES[category.to_sym][:text] %></p>
      </a>
    <% end %>
    <% @conseil_article.tag_list.each do |tag| %>
      <% if tag == "Commencer mon activité" %>
        <a href="/conseils?category_list=&tag_list=%2CCommencer+mon+activité"><p class="conseil-tag"> Commencer mon activité</p></a>
      <% end %>
      <% if tag == "Me former" %>
        <a href="/conseils?category_list=&tag_list=%2CMe+former"><p class="conseil-tag"> Me former </p></a>
      <% end %>
    <% end %>
  </div>
  <div class="banner-show">
    <div class="contact-title">
      <h2><%= @conseil_article.title %></h2>
      <p class="paragraphe mt30"><%= @conseil_article.subtitle %></p>
    </div>
    <div class="conseils-article-description">
      <p class="paragraphe"><span class="paragraphe-bold"><%= image_tag "emojis/reveil.png", class: "emojis-eflc-small" %> Temps de lecture : </span><%= @conseil_article.lecture_time %> min</p>
      <p class="paragraphe"><span class="paragraphe-bold"><%= image_tag "emojis/main-pointer.png", class: "emojis-eflc-small" %> Objectifs : </span><%= @conseil_article.objectif %></p>
    </div>
  </div>
</div>
<div class="arrondis-conseils-articles">
</div>

<div class="conseils-article-content">
  <div class="block-conseils-article">
    <p class="subtitle">Introduction</p>
    <div class="paragraphe"><%= @conseil_article.introduction.html_safe %></div>
  </div>
  <hr class="bhl">
  <div class="block-conseils-article">
    <p class="subtitle">En détails</p>
    <div class="paragraphe"><%= @conseil_article.explication.html_safe %></div>
    <div class="paragraphe"><%= @conseil_article.perspective.html_safe %></div>
    <div class="quote">
      <div class="paragraphe-spectral-italic">
        <%= @conseil_article.citation.html_safe %>
        <p class="citation-auteur"> <%= @conseil_article.citation_auteur %></p>
      </div>
    </div>
  </div>
  <% if @conseil_article.a_retenir.present? %>
    <hr class="bhl">
    <div class="block-conseils-article">
      <p class="subtitle">À retenir : </p>
      <div class="paragraphe background-rouille"><%= @conseil_article.a_retenir.html_safe %></div>
    </div>
  <% end %>
  <% if @conseil_article.liens_utiles.present? %>
    <hr class="bhl">
    <div class="block-conseils-article">
      <p class="subtitle">Liens utiles</p>
      <%= @conseil_article.liens_utiles.html_safe %>
    </div>
  <% end %>
  <hr class="bhl">
  <div class="block-conseils-article">
    <% if @conseil_article.sources.present? %>
      <p class="main-bold-paragraphe text-align-left">Sources</p>
      <p class="paragraphe"><%= @conseil_article.sources %></p>
    <% end %>
    <% if @conseil_article.auteur.present? %>
      <p class="main-bold-paragraphe text-align-left">Autrices, Auteurs</p>
      <p class="paragraphe"><%= @conseil_article.auteur %></p>
    <% end %>
  </div>
  <% if @conseil_article.auteur.present? || @conseil_article.sources.present? %>
    <hr class="bhl">
  <% end %>
</div>
